<h1 class="text-center">Lista de Heroes</h1>
<div class="row">
  <div class="col-sm-9">
    <h4>Lista heroes</h4>
  </div>
  <div class="col-sm-3">
    <a href="Vistas/Heroe/crearHeroe" class="btn btn-block btn-success">Crear Heroe</a>
  </div>
</div>
<br>
<% for(var i = 0; i < heroes.length; i++) { %>
<div class="row">
  <div class="col-sm-4">
    <h2><%= heroes[i].nombre %></h2>
  </div>
  <div class="col-sm-1"></div>
  <div class="col-sm-5">
    <p>
      ID: <%= heroes[i].id %>
      <br>
      Nombre:<%= heroes[i].nombre %>
      <br>
      Castillo: <%= heroes[i].castillo %>
      <br>
      Nivel: <%= heroes[i].nivel %>
    </p>
  </div>
  <div class="col-sm-1"></div>
  <div class="col-sm-1">
    <a href="/Heroe/borrarHeroe?id=<%= heroes[i].id %>" class="btn btn-block btn-danger">X</a>
    <a href="/Heroe/actualizarHeroe?id=<%= heroes[i].id %>" class="btn btn-block btn-info">Editar</a>
  </div>
</div>
<br>
<% } %>

